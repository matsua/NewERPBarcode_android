<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:orientation="horizontal">
	 	<!-- 항번 -->
	    <TextView
	        android:id="@+id/productsurvey_list_itemNumber"
	        android:layout_width="40dp"
	        style="@style/Form.Styled.NormalTextView" />
	    <!-- 자재코드 -->
	    <TextView
	        android:id="@+id/productsurvey_list_productCode"
	        android:layout_width="100dp"
	        style="@style/Form.Styled.NormalTextView" />
	    <!-- 자재명 -->
	    <TextView
	        android:id="@+id/productsurvey_list_productName"
	        android:layout_width="200dp"
	        style="@style/Form.Styled.NormalTextView" />
	    <!-- 수량 -->
	    <TextView
	        android:id="@+id/productsurvey_list_quantity"
	        android:layout_width="60dp"
	        style="@style/Form.Styled.NormalTextView" />
	    <!-- 스캔수량 -->
	    <TextView
	        android:id="@+id/productsurvey_list_scanQuantity"
	        android:layout_width="60dp"
	        style="@style/Form.Styled.NormalTextView" />
	    <!-- 배치번호 -->
	    <TextView
	        android:id="@+id/productsurvey_list_batchNumber"
	        android:layout_width="100dp"
	        style="@style/Form.Styled.NormalTextView" />
    </LinearLayout>
</LinearLayout>
